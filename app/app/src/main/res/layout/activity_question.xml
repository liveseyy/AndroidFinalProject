<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_backround"
    android:padding="16dp">

    <TextView
        android:id="@+id/textView3"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:text="Игрок №1"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/player1Score"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:layout_marginTop="30dp"
        android:text=""
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView5"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:text="Игрок №2"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/player2Score"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_marginTop="30dp"
        android:text=""
        android:textSize="24sp" />

    <TextView
        android:id="@+id/questionResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginBottom="96dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <Button
        android:id="@+id/answer1"
        style="@style/Widget.Material3.Button"
        android:backgroundTint="@color/answer_button"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal"
        android:text="Ответ 1" />

    <Button
        android:id="@+id/answer2"
        style="@style/Widget.Material3.Button"
        android:backgroundTint="@color/answer_button"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="60dp"
        android:text="Ответ 2" />

    <Button
        android:id="@+id/answer3"
        style="@style/Widget.Material3.Button"
        android:backgroundTint="@color/answer_button"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="120dp"
        android:text="Ответ 3" />

    <Button
        android:id="@+id/answer4"
        style="@style/Widget.Material3.Button"
        android:backgroundTint="@color/answer_button"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="180dp"
        android:text="Ответ 4" />

</FrameLayout>